{# Macro to format the CVP link based on known information and the feature switch value #}

{% macro formatCvpLink(hmctsNumber, videoLinkUrl) %}
    {% set cvpLinkUrl %}
        {% if hmctsNumber %}
            {{ (hmctsNumber | toFullCourtLink) }}
        {% elseif videoLinkUrl %}
            {{ videoLinkUrl }}
        {% else %}
            None entered
        {% endif %}
    {% endset %}
    {{ cvpLinkUrl }}
{% endmacro %}
