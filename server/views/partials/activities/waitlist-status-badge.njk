{% from "govuk/components/tag/macro.njk" import govukTag %}
{% from "partials/activities/waitingListStatusDescription.njk" import waitingListStatusDescription %}

{% macro waitlistStatusBadge(status, waitlistWithdrawnEnabled) %}
  {% set class =
    (('govuk-tag--green' if status == WaitingListStatus.APPROVED) or
    ('govuk-tag--red' if status == WaitingListStatus.DECLINED) or
    ('govuk-tag--yellow' if status == WaitingListStatus.PENDING) or
    ('govuk-tag--grey' if status == 'WITHDRAWN')
    )
  %}

    {{govukTag({
      text: waitingListStatusDescription(status, waitlistWithdrawnEnabled),
      classes: class
    })}}
{% endmacro %}
