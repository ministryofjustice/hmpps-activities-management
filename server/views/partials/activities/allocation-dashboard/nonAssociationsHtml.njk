{% macro nonAssociationsHtml(row, activityId) %}
    {% set activityIdentifier = row.activityId or activityId %}
    {% if row.nonAssociations %}
        <p class="govuk-body"><a href='/activities/non-associations/{{ activityIdentifier }}/{{ row.prisonerNumber }}' class='govuk-link govuk-link--no-visited-state' target='_blank'>View non-associations</a></p>
    {% else %}
        <p class="govuk-body">None</p>
    {% endif %}
{% endmacro %}