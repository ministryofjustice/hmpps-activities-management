{% extends "homepageLayout.njk" %}
{% from "components/card.njk" import card %}

{% set pageTitle = applicationName + " - Home" %}
{% set pageId = 'index-page' %}
{% set backLinkText = "Digital Prison Services" %}
{% set backLinkHref = dpsUrl %}

{% block heading %}
    <h1 class="govuk-heading-l">Select service</h1>
{% endblock %}

{% block content %}
    <div class="card-group govuk-grid-row">
        <div class="govuk-grid-column-one-third card-group__item">
            {{ card({
                "href": "/activities",
                "clickable": "true",
                "heading": "Allocate people, unlock and attend",
                "description": "Create and edit activities. Allocate people and edit allocations. Print unlock lists and record attendance."
            }) }}
        </div>

        <div class="govuk-grid-column-one-third card-group__item">
            {{ card({
                "href": "/appointments",
                "clickable": "true",
                "heading": "Schedule and edit appointments",
                "description": "Create one-to-one and group appointments. Edit existing appointments and print movement slips."
            }) }}
        </div>
    </div>
{% endblock %}
