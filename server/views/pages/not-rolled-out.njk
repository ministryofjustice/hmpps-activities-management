{% extends "layout.njk" %}
{% from "components/card.njk" import card %}

{% set pageTitle = applicationName + " - Forbidden" %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <h1 class="govuk-heading-xl">The {{ serviceName }} service is not available at {{ user.activeCaseLoadDescription }} yet</h1>

            <p class="govuk-body">
                The {{ serviceName }} service will be available at {{ user.activeCaseLoadDescription }}
                {% if rolloutDate %}
                    on {{ rolloutDate | formatDate }}.
                {% else %}
                    soon. We'll let you know when it's coming.
                {% endif %}
            </p>
        </div>
    </div>

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <div class="govuk-button-group">
                <a id="return-to-home" href="{{ hmppsAuthUrl }}" class="govuk-button">HMPPS services home page</a>
                <a href='{{ dpsUrl }}/change-caseload' class='govuk-link govuk-!-font-size-19'>Change your location</a>
            </div>
        </div>
    </div>
{% endblock %}
