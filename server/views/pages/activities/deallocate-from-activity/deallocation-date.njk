{% extends "layout.njk" %}

{% from "components/datePicker.njk" import datePicker %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageTitle = applicationName + " - Deallocate from an activity - Deallocation date" %}
{% set pageId = 'deallocation-date-page' %}
{% set backLinkHref = "/activities/allocation-dashboard/" + session.deallocateJourney.scheduleId %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <form method="POST">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
                <input type="hidden" id="startDate" name="startDate" value="{{ session.deallocateJourney.latestAllocationStartDate }}">
                
                <span class="govuk-caption-xl">{{ session.deallocateJourney.activity.activityName }}</span>

                {% set pageHeading %}
                    {% if session.deallocateJourney.allocationsToRemove | length == 1 %}
                        When is {{ session.deallocateJourney.prisoners[0].name }}'s last day on this activity?
                    {% else %}
                        When is the last day for {{ session.deallocateJourney.allocationsToRemove | length }} people on this activity?
                    {% endif %}
                {% endset %}

                {{ datePicker({
                    id: 'deallocationDate',
                    label: {
                        text: pageHeading,
                        classes: "govuk-fieldset__legend--xl",
                        isPageHeading: true
                    },
                    hint: {
                        text: "For example, " + exampleDate()
                    },
                    renderedErrorMessage: validationErrors | findError('deallocationDate'),
                    validationErrors: validationErrors,
                    formResponses: formResponses.deallocationDate or session.deallocateJourney.deallocationDate
                }) }}

                {{ govukButton({
                    text: "Continue"
                }) }}

                {% if session.deallocateJourney.allocationsToRemove | length > 1 %}
                    {% set rows = [] %}
                    {% for prisoner in session.deallocateJourney.prisoners %}
                        {% set rows = (rows.push([
                            {
                                text: prisoner.name
                            },
                            {
                                text: prisoner.prisonerNumber
                            },
                            {
                                text: prisoner.cellLocation
                            }
                        ]), rows) %}
                    {% endfor %}

                    {{ govukDetails({
                        summaryText: "People you are taking off " + session.deallocateJourney.activity.activityName,
                        html: govukTable({
                            caption: "People you are taking off " + session.deallocateJourney.activity.activityName,
                            captionClasses: "govuk-visually-hidden",
                            firstCellIsHeader: true,
                            classes: 'govuk-!-width-two-thirds',
                            rows: rows
                        })
                    }) }}
                {% endif %}
            </form>
        </div>
    </div>
{% endblock %}
