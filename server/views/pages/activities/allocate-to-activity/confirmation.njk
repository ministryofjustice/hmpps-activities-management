{% extends "layout.njk" %}

{% from "govuk/components/panel/macro.njk" import govukPanel %}

{% set pageTitle = applicationName + " - Allocate to an activity - Confirmation" %}
{% set pageId = 'confirmation-page' %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            {{ govukPanel({
                titleText: "Allocation complete",
                text: prisonerName + ' ' + prisonerNumber + ' is now allocated to ' + activityName
            }) }}
            <h2 class="govuk-heading-m">If you want to allocate more people</h2>
            <p class="govuk-body">
                View more information for <a href="/activities/allocation-dashboard/{{ scheduleId }}">{{ activityName }}</a> or
                check the <a href="/activities/allocation-dashboard">activities dashboard</a> to see more activities with vacancies.
            </p>
        </div>
    </div>
{% endblock %}
