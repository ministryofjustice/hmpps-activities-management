{% extends "layout.njk" %}

{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageTitle = applicationName + " - Edit allocation - Deallocation reason" %}
{% set pageId = 'deallocation-reason-page' %}
{% set jsBackLink = true %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <span class="govuk-caption-l">{{ session.allocateJourney.activity.name }}</span>
            <span class="govuk-heading-l govuk-!-margin-bottom-6">Why are you taking {{ session.allocateJourney.inmate.prisonerName }} off this activity?</span>

            <form method="POST">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}" />

                {% set options = [] %}
                {% for reason in deallocationReasons %}
                    {% set options = (options.push(
                        {
                            value: reason.code,
                            text: reason.description,
                            checked: formResponses.deallocationReason == reason.code or session.allocateJourney.deallocationReason == reason.code
                        }
                    ), options) %}
                {% endfor %}

                {{ govukRadios({
                    fieldset: {
                        legend: {
                            text: "Select a deallocation reason",
                            classes: "govuk-visually-hidden"
                        }
                    },
                    name: "deallocationReason",
                    errorMessage: validationErrors | findError('deallocationReason'),
                    items: options
                }) }}

                {{ govukButton({
                    text: "Confirm changes"
                }) }}

            </form>
        </div>
    </div>
{% endblock %}
