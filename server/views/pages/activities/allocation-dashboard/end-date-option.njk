{% extends "layout.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% set pageTitle = applicationName + " - Edit allocation - End Date option" %}
{% set pageId = 'edit-allocation-end-date-option-page' %}
{% set backLinkHref = '/activities/allocation-dashboard/'+ scheduleId + '/check-allocation/' +prisonerNumber %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <span class="govuk-caption-l">{{ allocation.activitySummary }}</span>
 
            <form method="POST">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
                <input type="hidden" id="allocationId" name="allocationId" value="{{ allocationId }}">
                <input type="hidden" id="scheduleId" name="scheduleId" value="{{ scheduleId }}">
                <input type="hidden" id="prisonerNumber" name="prisonerNumber" value="{{ prisonerNumber }}">

                {{ govukRadios({
                    classes: "govuk-radios",
                    name: "endDateOption",
                    fieldset: {
                        legend: {
                            text: "Do you want to change or remove the end date for this allocation?",
                            isPageHeading: true,
                            classes: "govuk-fieldset__legend--xl"
                        }
                    },
                    items: [
                        {
                            value: "change",
                            text: "Change the date",
                            checked: endDateOption == "change"
                        },
                        {
                            value: "remove",
                            text: "Remove the end date - they will stay on the activity",
                            checked: endDateOption == "remove"
                        }
                    ],
                    errorMessage: validationErrors | findError('endDateOption')
                }) }}

                {{ govukButton({
                    text: "Continue"
                }) }}
            </form>
        </div>
    </div>
{% endblock %}
