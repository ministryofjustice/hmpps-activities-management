{% extends "layout.njk" %}

{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}

{% set pageTitle = applicationName + " - Create an activity - Risk level" %}
{% set pageId = 'risk-level-page' %}
{% set backLinkHref = "name" %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <span class="govuk-caption-m">{{ session.createJourney.category.name }}</span>
            <span class="govuk-heading-m">{{ session.createJourney.name }}</span>
            <form method="POST">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
                {% set pageHeading = "Workplace risk assessment levels: which ones are suitable for this activity?" %}
                {% if session.req.query.fromEditActivity %}
                    {% set pageHeading = "Change workplace risk assessment levels" %}
                {% endif %}
                {{ govukRadios({
                    fieldset: {
                        legend: {
                            text: pageHeading,
                            isPageHeading: true,
                            classes: "govuk-fieldset__legend--l"
                        }
                    },
                    name: "riskLevel",
                    errorMessage: validationErrors | findError('riskLevel'),
                    hint: {
                        text: "Choose one option to set the requirement for the activity."
                    },
                    items: [
                        {
                            value: "low",
                            html: "Only <span class='govuk-!-font-weight-bold'>low workplace
                                risk assessment</span> is suitable",
                            checked: formResponses.riskLevel == 'low' or session.createJourney.riskLevel == 'low'
                        },
                        {
                            value: "medium",
                            html: "<span class='govuk-!-font-weight-bold'>Either low or medium workplace
                                risk assessment</span> is suitable",
                            checked: formResponses.riskLevel == 'medium' or session.createJourney.riskLevel == 'medium'
                        },
                        {
                            value: "high",
                            html: "<span class='govuk-!-font-weight-bold'>Any of low, medium or high workplace
                                risk assessment</span> is suitable",
                            checked: formResponses.riskLevel == 'high' or session.createJourney.riskLevel == 'high'
                        }
                    ]
                }) }}

                {{ govukDetails({
                    summaryText: "What is a workplace risk assessment level?",
                    text: "Each person in your prison should have been given a workplace risk assessment level."
                }) }}

                {% if session.req.query.fromEditActivity %}
                    {{ govukWarningText({
                        text: "If you change the risk assessment level, people who are currently allocated to this activity may no longer meet the requirements.",
                        iconFallbackText: "Warning"
                    }) }}

                    <div class="govuk-button-group">
                        {{ govukButton({
                            text: "Update risk assessment level"
                        }) }}
                        <a class="govuk-link js-backlink" href="/">Cancel</a>
                    </div>
                {% else %}
                    {{ govukButton({
                        text: "Continue"
                    }) }}
                {% endif %}
            </form>
        </div>
    </div>
{% endblock %}
