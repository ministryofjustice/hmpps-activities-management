{% extends "homepageLayout.njk" %}
{% from "components/card.njk" import card %}

{% set pageTitle = "Manage unlock and movement lists - Activities - DPS" %}
{% set pageId = 'unlock-list-home' %}
{% set hardBackLinkHref = "/activities" %}
{% set hardBackLinkText = "Back to all activities, unlock and attendance tasks" %}

{% block heading %}
    <h1 class="govuk-heading-l">Manage unlock and movement lists</h1>
{% endblock %}

{% block content %}
    <div class="card-group govuk-grid-row">
        <div class="govuk-grid-column-one-third card-group__item">
            {{ card({
                "id": "CreateUnlockLists",
                "href": "/activities/unlock-list/select-date-and-location",
                "clickable": "true",
                "heading": "Create unlock lists",
                "description": "To use on wings and houseblocks as the list of who to unlock to attend activities and appointments.",
                "data-qa": "create-unlock-lists"
            }) }}
        </div>

        <div class="govuk-grid-column-one-third card-group__item">
            {{ card({
                "id": "CreateMovementLists",
                "href": "/activities/movement-list/choose-details",
                "clickable": "true",
                "heading": "Create movement lists",
                "description": "To use at prison locations, like workplaces and classrooms, as the list of who is expected to be there.",
                "data-qa": "create-movement-lists"
            }) }}
        </div>
    </div>
{% endblock %}
