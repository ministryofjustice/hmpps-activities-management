{% extends "layout.njk" %}

{% set pageTitle = applicationName + " - Record attendance" %}
{% set pageId = 'prisoner-allocations-dashboard' %}
{% set prisonerName = prisoner | firstNameLastName | toTitleCase %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <h1 class="govuk-heading-l">{{ prisonerName }}'s activity allocations</h1>
            <div class="mini-profile">
                <img
                    src="/profileImage/{{ prisoner.prisonerNumber }}/image"
                    alt="Photograph of {{ prisonerName }}"
                    aria-label="Photograph of {{ prisonerName }}"
                    data-qa="offender-image"
                    class="prisonerInfoBanner__prisoner-image"
                />
                <div class="mini-profile__details">
                    <div class="mini-profile__detail">
                        <div class="mini-profile__detail-label">
                            <a href="{{ dpsUrl }}/prisoner/{{ prisoner.prisonerNumber }}" target="_blank">{{ prisonerName }}</a>
                        </div>
                        <div class="mini-profile__detail-value">
                            {{ prisoner.prisonerNumber }}
                        </div>
                    </div>
                    <div class="mini-profile__detail">
                        <div class="mini-profile__detail-label">
                            Location
                        </div>
                        <div class="mini-profile__detail-value">
                            <a href="{{ dpsUrl }}/prisoner/{{ prisoner.prisonerNumber }}/location-details" target="_blank">{{ prisoner.cellLocation }}</a>
                        </div>
                    </div>
                    <div class="mini-profile__detail">
                        <div class="mini-profile__detail-label">
                            Incentive level
                        </div>
                        <div class="mini-profile__detail-value">
                            <a href="{{ dpsUrl }}/incentive-reviews/prisoner/{{ prisoner.prisonerNumber }}" target="_blank">{{ prisoner.currentIncentive.level.description }}</a>
                        </div>
                    </div>
                    <div class="mini-profile__detail">
                        <div class="mini-profile__detail-label">
                            Earliest release date
                        </div>
                        <div class="mini-profile__detail-value">
                            <a href="{{ dpsUrl }}/prisoner/{{ prisoner.prisonerNumber }}/offences" target="_blank">{{ prisoner.earliestReleaseDate | formatDate('d MMMM yyyy') }}</a>
                        </div>
                    </div>
                    <div class="mini-profile__detail">
                        <div class="mini-profile__detail-label">
                            Workplace risk assessment
                        </div>
                        <div class="mini-profile__detail-value">
                            {{ prisoner.workplaceRiskAssessment | toTitleCase }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}