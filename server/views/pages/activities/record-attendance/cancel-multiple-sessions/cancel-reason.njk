{% extends "layout.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "partials/attendance/cancelReasonList.njk" import cancelReasonList %}

{% set jsBackLink = true %}
{% set pageTitle = "Cancellation reason for multiple sessions - Activities - DPS" %}
{% set pageId = 'cancel-multiple-session-reason-page' %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <span class="govuk-caption-l">Cancel activity sessions</span>
      <h1 class="govuk-heading-l govuk-!-margin-bottom-2">Why are you cancelling these sessions?</h1>
      <span class="govuk-caption-m govuk-!-margin-bottom-3">This will be recorded as an acceptable absence for everyone who was due to attend.</span>

      <form method="POST">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}" />

        {{ cancelReasonList(cancellationReasons, comment, reason ) }}

        {{ govukButton({
          text: "Continue"
        }) }}
      </form>
    </div>
  </div>
{% endblock %}
