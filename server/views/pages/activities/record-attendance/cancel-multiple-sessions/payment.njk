{% extends "layout.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% set jsBackLink = true %}
{% set pageTitle = applicationName + " - Cancel multiple sessions - Update Pay" %}
{% set pageId = 'cancel-multiple-session-update-pay-page' %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <span class="govuk-caption-l">Cancel activity sessions</span>
      <h1 class="govuk-heading-l">Should people be paid for these cancelled sessions?</h1>
      <span class="govuk-caption-m govuk-!-margin-bottom-3">If someone has already been marked as 'Not required' for a session, their pay will not change.</span>
      <form method="POST">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
        {{ govukRadios({
          name: "issuePayOption",
          errorMessage: validationErrors | findError('issuePayOption'),
          items: [
            {
              value: "yes",
              text: "Yes",
              checked: "yes" == formResponses.issuePayOption
            },
            {
              value: "no",
              text: "No",
              checked: "no" == formResponses.issuePayOption
            }
          ]
        }) }}

        {{ govukButton({
          text: "Continue",
          preventDoubleClick: true
        }) }}
      </form>
    </div>
  </div>
{% endblock %}
