{% extends "layout.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% set jsBackLink = true %}
{% set pageTitle = applicationName + " - Cancel single session - Payment" %}
{% set pageId = 'cancel-single-session-payment-page' %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <span class="govuk-caption-l">Cancel activity session</span>
      <h1 class="govuk-heading-l">Should people be paid for this cancelled session of {{ activityName }}?</h1>
      <form method="POST">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
        {{ govukRadios({
          name: "issuePayOption",
          errorMessage: validationErrors | findError('issuePayOption'),
          items: [
            {
              value: "yes",
              text: "Yes",
              checked: "yes" == formResponses.issuePayOption
            },
            {
              value: "no",
              text: "No",
              checked: "no" == formResponses.issuePayOption,
              hint: {
                text: "Anyone already marked as ‘Attended’ will now not be paid. Their attendance will change to ‘Cancelled’."
              }
            }
          ]
        }) }}

        {{ govukButton({
          text: "Continue",
          preventDoubleClick: true
        }) }}
      </form>
    </div>
  </div>
{% endblock %}
