{% extends "layout.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "partials/formatSessions.njk" import formatSessions %}

{% set pageTitle = applicationName + " - Not Required or Excused - Paid or not" %}
{% set pageId = 'not-required-or-excused-paid-or-not-page' %}
{% set jsBackLink = true %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <span class="govuk-caption-l">Record activity attendance</span>
      {% set prisonerIndex = 0 %}
      <h1 class="govuk-heading-l">
        Should {{ "1 person" if selectedPrisoners | length == 1 else selectedPrisoners | length + " people" }} be paid for {{ "this session" if instances | length == 1 else " these sessions" }} they are not required at?
      </h1>
      <div class="govuk-inset-text">
        {{ instance.activitySchedule.description }} on {{ instance.date | formatDate }} ({{ instance.timeSlot if instances | length == 1 else formatSessions(timePeriods) }})
      </div>
      <form method="POST">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}"/>

        {{ govukRadios({
          name: "paidOrNot",
          errorMessage: validationErrors | findError('paidOrNot'),
          items: [
            {
              value: "yes",
              text: "Yes",
              checked: "yes" == formResponses.paidOrNot,
              hint: {
                text: "They'll be paid overnight on " + instance.date | formatDate
              }
            },
            {
              value: "no",
              text: "No",
              checked: "no" == formResponses.paidOrNot
            }
          ]
        }) }}

        <div class="govuk-button-group">
          {{ govukButton({
            text: "Continue",
            preventDoubleClick: true
          }) }}
          <a class="govuk-link js-backlink" href="/activities/attendance/{{ recordAttendanceJourney.activityId }}/activities/{{ instance.id }}/attendance-list">Cancel</a>
        </div>
      </form>
    </div>
  </div>
{% endblock %}