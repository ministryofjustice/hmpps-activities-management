{% extends "layout.njk" %}

{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageTitle = applicationName + " - Reinstate application" %}
{% set mainClasses = "govuk-body" %}
{% set hardBackLinkText = 'Back' %}
{% set hardBackLinkHref = "./view" %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <span class="govuk-caption-xl">{{ waitListApplicationJourney.activity.activityName }}</span>
            <form method="POST">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}"/>

                {{ govukRadios({
                    name: "reinstate",
                    fieldset: {
                        legend: {
                            text: "Are you sure you want to reinstate " + waitListApplicationJourney.prisoner.name + "'s application?",
                            isPageHeading: true,
                            classes: "govuk-fieldset__legend--l"
                        }
                    },
                    hint: {
                        text: "It will be reinstated as Pending. You'll be able to change the status."
                    },
                    errorMessage: validationErrors | findError('reinstate'),
                    items: [
                        {
                            value: "YES",
                            text: "Yes"
                        },
                        {
                            value: "NO",
                            text: "No, leave it as withdrawn"
                        }
                    ]
                }) }}

                <div class="govuk-button-group">
                    {{ govukButton({
                        text: "Continue",
                        preventDoubleClick: true
                    }) }}
                    <a class="govuk-link " href="./view">Cancel</a>
                </div>
            </form>
        </div>
    </div>
{% endblock %}