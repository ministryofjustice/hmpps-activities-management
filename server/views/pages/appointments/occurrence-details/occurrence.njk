{% extends "layout.njk" %}

{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% from "partials/appointmentPrisonerSummary.njk" import appointmentPrisonerSummary %}
{% from "pages/appointments/partials/prisoner-list.njk" import prisonerList %}

{% set pageTitle = "Appointments Management - Appointment Details" %}
{% set pageId = 'appointment-view-details-page' %}

{% set occurenceLink = '/appointments/' + occurrence.appointmentId + '/occurrence/' + occurrence.id  %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-l" data-qa='heading'>{{ occurrence.category.description }} appointment - {{ occurrence.startDate | toDate | formatDate('EEEE d MMMM yyyy') }}</h1>
            <h2 class="govuk-heading-m">{{ ("Group" if occurrence.appointmentType == AppointmentType.GROUP) + ("Individual" if occurrence.appointmentType == AppointmentType.INDIVIDUAL) }} appointment details</h2>
            {{ govukSummaryList({
                rows: [{
                        key: {
                            text: "Prisoner"
                        },
                        value: {
                            html: appointmentPrisonerSummary(occurrence.prisoners[0].firstName + ' ' + occurrence.prisoners[0].lastName, occurrence.prisoners[0].prisonerNumber, occurrence.prisoners[0].cellLocation, dpsUrl)
                        }
                    } if occurrence.appointmentType == AppointmentType.INDIVIDUAL, {
                        key: {
                            text: "Category"
                        },
                        value: {
                            text: occurrence.category.description
                        }
                    }, {
                        key: {
                            text: "Show category on unlock list"
                        },
                        value: {
                            text: ("Yes" if occurrence.appointmentDescription == null) + ("No" if occurrence.appointmentDescription != null)
                        }
                    }, {
                        key: {
                            text: "Appointment description"
                        },
                        value: {
                            text: occurrence.appointmentDescription
                        }
                    } if occurrence.appointmentDescription != null, {
                        key: {
                            text: "Location"
                        },
                        value: {
                            text: occurrence.internalLocation.description
                        },
                        actions: {
                            items: [
                                {
                                    href: occurenceLink + "/edit/start/location",
                                    text: "Change",
                                    classes: "govuk-link--no-visited-state",
                                    attributes: { 'data-qa': 'change-location' }
                                }
                            ]
                        }
                    }, {
                        key: {
                            text: "Date"
                        },
                        value: {
                            text: occurrence.startDate | toDate | formatDate('EEEE d MMMM yyyy')
                        },
                        actions: {
                            items: [
                                {
                                    href: occurenceLink + "/edit/start/date-and-time",
                                    text: "Change",
                                    classes: "govuk-link--no-visited-state",
                                    attributes: { 'data-qa': 'change-date' }
                                }
                            ]
                        }
                    }, {
                        key: {
                            text: "Start time"
                        },
                        value: {
                            text: occurrence.startTime
                        },
                        actions: {
                            items: [
                                {
                                    href: occurenceLink + "/edit/start/date-and-time",
                                    text: "Change",
                                    classes: "govuk-link--no-visited-state",
                                    attributes: { 'data-qa': 'change-start-time' }
                                }
                            ]
                        }
                    }, {
                        key: {
                            text: "End time"
                        },
                        value: {
                            text: occurrence.endTime
                        },
                        actions: {
                            items: [
                                {
                                    href: occurenceLink + "/edit/start/date-and-time",
                                    text: "Change",
                                    classes: "govuk-link--no-visited-state",
                                    attributes: { 'data-qa': 'change-end-time' }
                                }
                            ]
                        }
                    }, {
                        key: {
                            text: "Occurrence"
                        },
                        value: {
                            text: occurrence.sequenceNumber + " of " + occurrence.repeat.count
                        },
                        actions: {
                            items: [
                                {
                                    href: "/appointments/" + occurrence.appointmentId,
                                    text: "View series",
                                    classes: "govuk-link--no-visited-state",
                                    attributes: { 'data-qa': 'view-appointment-series' }
                                }
                            ]
                        }
                    } if occurrence.repeat != null, {
                        key: {
                            text: "Created by"
                        },
                        value: {
                            text: occurrence.createdBy | fullName | toTitleCase | initialiseName
                        }
                    }, {
                        key: {
                            text: "Updated by"
                        },
                        value: {
                            text: occurrence.updatedBy | fullName | toTitleCase | initialiseName
                        }
                    } if occurrence.updatedBy
                ],
                classes: "govuk-!-margin-bottom-9",
                attributes: { 'data-qa': 'appointment-details' }
            }) }}

            {{ prisonerList(occurrence.prisoners) if occurrence.appointmentType == AppointmentType.GROUP }}

            <p class="govuk-body govuk-!-display-none-print">
                {{ govukButton({
                    text: "Print movement slip",
                    href: occurenceLink + '/movement-slip',
                    attributes: {
                        'data-qa': 'print-movement-slip-link'
                    }
                }) }}
            </p>

            {% if occurrence.repeat != null %}
                <p class="govuk-body govuk-!-display-none-print">
                    <a href="/appointments/{{ occurrence.appointmentId }}" class="govuk-link govuk-link--no-visited-state">Go to series</a>
                </p>
            {% endif %}
        </div>
    </div>
{% endblock %}
