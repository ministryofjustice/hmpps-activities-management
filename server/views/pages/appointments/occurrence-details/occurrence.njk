{% extends "layout.njk" %}

{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/tag/macro.njk" import govukTag %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}
{% from "govuk/components/notification-banner/macro.njk" import govukNotificationBanner %}

{% from "pages/appointments/partials/prisoner-list.njk" import prisonerList %}
{% from "pages/appointments/partials/service-user-name.njk" import serviceUserName %}

{% set pageTitle = occurrence.appointmentName + (' single' if occurrence.repeat) + ' appointment details' %}
{% set pageId = 'appointment-occurrence-view-details-page' %}

{% set occurenceLink = '/appointments/' + occurrence.appointmentId + '/occurrence/' + occurrence.id  %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            {% if occurrence.isCancelled %}
                {% set cancelledAppointmentHeadingHtml %}
                    <h3 class="govuk-notification-banner__heading">Appointment cancelled</h3>
                    <p class="govuk-body">This appointment was cancelled by {{ occurrence.cancelledBy | fullName | toTitleCase | initialiseName }} on {{ occurrence.cancelled | parseDate("yyyy-MM-dd'T'HH:mm:ss") | formatDate("EEEE, d MMMM yyyy") }}</p>
                {% endset %}
                {{ govukNotificationBanner({
                    type: 'important',
                    html: cancelledAppointmentHeadingHtml
                }) }}
            {% endif %}

            <span class="govuk-caption-l" data-qa="caption">Manage appointments</span>
            <h1 class="govuk-heading-l govuk-!-margin-bottom-2" data-qa='heading'>{{ occurrence.appointmentName }}</h1>
            <p class="govuk-body govuk-!-margin-top-1" data-qa='sub-heading'>{{ occurrence.startDate | toDate | formatDate("EEEE, d MMMM yyyy") }}</p>

            {% if occurrence.bulkAppointment %}
                {{ govukInsetText({
                    html: 'This appointment was scheduled in a <strong>set of ' + occurrence.bulkAppointment.appointmentCount + '</strong>. You can <a href="/appointments/bulk-appointments/' + occurrence.bulkAppointment.id + '">view the set</a> to print all movement slips at once.'
                }) }}
            {% endif %}

            {% if occurrence.repeat %}
                {{ govukSummaryList({
                    card: {
                        title: {
                            text: "Series details"
                        },
                        actions: {
                            items: [
                                {
                                    href: "/appointments/" + occurrence.appointmentId,
                                    text: "View series",
                                    classes: "govuk-link--no-visited-state",
                                    attributes: { 'data-qa': 'view-series' }
                                }
                            ]
                        }
                    },
                    rows: [
                        {
                            key: {
                                text: "Frequency"
                            },
                            value: {
                                text: ("Every weekday (Monday to Friday)" if occurrence.repeat.period == AppointmentRepeatPeriod.WEEKDAY) +
                                ("Daily (includes weekends)" if occurrence.repeat.period == AppointmentRepeatPeriod.DAILY) +
                                ("Weekly" if occurrence.repeat.period == AppointmentRepeatPeriod.WEEKLY) +
                                ("Fortnightly" if occurrence.repeat.period == AppointmentRepeatPeriod.FORTNIGHTLY) +
                                ("Monthly" if occurrence.repeat.period == AppointmentRepeatPeriod.MONTHLY)
                            }
                        }, {
                            key: {
                                text: "Appointment"
                            },
                            value: {
                                text: occurrence.sequenceNumber + " of " + occurrence.repeat.count
                            }
                        }
                    ],
                    attributes: { 'data-qa': 'appointment-series-details' }
                }) }}
            {% endif %}

            {{ govukSummaryList({
                card: {
                    title: {
                        text: "Appointment details"
                    },
                    actions: {
                        items: [
                            {
                                href: occurenceLink + "/edit/start/cancel",
                                text: "Cancel appointment",
                                classes: "govuk-link--no-visited-state",
                                attributes: { 'data-qa': 'cancel-appointment' }
                            }
                        ]
                    } if occurrence.isCancelled == false and occurrence.isExpired == false
                },
                rows: [
                    {
                        key: {
                            text: "Appointment name"
                        },
                        value: {
                            text: occurrence.appointmentName
                        }
                    }, {
                        key: {
                            text: "Location"
                        },
                        value: {
                            text: occurrence.internalLocation.description
                        },
                        actions: {
                            items: [
                                {
                                    href: occurenceLink + "/edit/start/location",
                                    text: "Change",
                                    classes: "govuk-link--no-visited-state",
                                    attributes: { 'data-qa': 'change-location' }
                                }
                            ]
                        } if occurrence.isCancelled == false and occurrence.isExpired == false
                    }, {
                        key: {
                            text: "Date"
                        },
                        value: {
                            text: occurrence.startDate | toDate | formatDate('EEEE, d MMMM yyyy')
                        },
                        actions: {
                            items: [
                                {
                                    href: occurenceLink + "/edit/start/date-and-time",
                                    text: "Change",
                                    classes: "govuk-link--no-visited-state",
                                    attributes: { 'data-qa': 'change-date' }
                                }
                            ]
                        } if occurrence.isCancelled == false and occurrence.isExpired == false
                    }, {
                        key: {
                            text: "Start time"
                        },
                        value: {
                            text: occurrence.startTime
                        },
                        actions: {
                            items: [
                                {
                                    href: occurenceLink + "/edit/start/date-and-time",
                                    text: "Change",
                                    classes: "govuk-link--no-visited-state",
                                    attributes: { 'data-qa': 'change-start-time' }
                                }
                            ]
                        } if occurrence.isCancelled == false and occurrence.isExpired == false
                    }, {
                        key: {
                            text: "End time"
                        },
                        value: {
                            text: occurrence.endTime
                        },
                        actions: {
                            items: [
                                {
                                    href: occurenceLink + "/edit/start/date-and-time",
                                    text: "Change",
                                    classes: "govuk-link--no-visited-state",
                                    attributes: { 'data-qa': 'change-end-time' }
                                }
                            ]
                        } if occurrence.isCancelled == false and occurrence.isExpired == false
                    }, {
                        key: {
                            text: "Extra information"
                        },
                        value: {
                            html: '<span class="preserve-line-breaks">' + (occurrence.comment | escape) + '</span>'
                        },
                        actions: {
                            items: [
                                {
                                    href: occurenceLink + "/edit/start/comment",
                                    text: "Change",
                                    classes: "govuk-link--no-visited-state",
                                    attributes: { 'data-qa': 'change-comment' }
                                }
                            ]
                        } if occurrence.isCancelled == false and occurrence.isExpired == false
                    }
                ],
                attributes: { 'data-qa': 'appointment-details' }
            }) }}

            {{ prisonerList(occurrence) }}

            {{ govukSummaryList({
                card: {
                    title: {
                        text: "Appointment history"
                    }
                },
                rows: [
                    {
                        key: {
                        text: "Created by"
                    },
                        value: {
                            text: serviceUserName(occurrence.createdBy)
                        }
                    }, {
                        key: {
                            text: "Date created"
                        },
                        value: {
                            text: occurrence.created | parseDate("yyyy-MM-dd'T'HH:mm:ss") | formatDate('EEEE, d MMMM yyyy')
                        }
                    }, {
                        key: {
                            text: "Last edited by"
                        },
                        value: {
                            text: serviceUserName(occurrence.updatedBy)
                        }
                    } if occurrence.updatedBy, {
                        key: {
                            text: "Date last edited"
                        },
                        value: {
                            text: occurrence.updated | parseDate("yyyy-MM-dd'T'HH:mm:ss") | formatDate('EEEE, d MMMM yyyy')
                        }
                    } if occurrence.updated
                ],
                attributes: { 'data-qa': 'appointment-history' }
            }) }}
        </div>
    </div>
{% endblock %}
