{% extends "layout.njk" %}

{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "pages/appointments/partials/appointment-type-caption.njk" import appointmentTypeCaption %}
{% from "pages/appointments/partials/appointment-journey-title.njk" import appointmentJourneyTitle %}

{% set pageTitle = appointmentJourneyTitle("Repeat Period and Count", session.appointmentJourney) %}
{% set pageId = 'appointments-create-repeat-period-and-count-page' %}
{% set backLinkHref = "repeat" %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            {{ appointmentTypeCaption(session) }}
            <h1 class="govuk-heading-l">How often will the appointment repeat?</h1>
            <form method="POST">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}" />

                <div data-module="appointment-end-date" data-start-date="{{ session.appointmentJourney.startDate.date }}">
                    {% set repeatPeriod = formResponses.repeatPeriod or session.appointmentJourney.repeatPeriod %}
                    {{ govukRadios({
                        name: "repeatPeriod",
                        errorMessage: validationErrors | findError('repeatPeriod'),
                        items: [
                            {
                                value: AppointmentRepeatPeriod.WEEKDAY,
                                text: "Every weekday (Monday to Friday)",
                                checked: repeatPeriod == AppointmentRepeatPeriod.WEEKDAY
                            },
                            {
                                value: AppointmentRepeatPeriod.DAILY,
                                text: "Daily (includes weekends)",
                                checked: repeatPeriod == AppointmentRepeatPeriod.DAILY
                            },
                            {
                                value: AppointmentRepeatPeriod.WEEKLY,
                                text: "Weekly",
                                checked: repeatPeriod == AppointmentRepeatPeriod.WEEKLY
                            },
                            {
                                value: AppointmentRepeatPeriod.FORTNIGHTLY,
                                text: "Fortnightly",
                                checked: repeatPeriod == AppointmentRepeatPeriod.FORTNIGHTLY
                            },
                            {
                                value: AppointmentRepeatPeriod.MONTHLY,
                                text: "Monthly",
                                hint: {
                                    text: "On the same date every month, or the last day if there is no matching date in the month."
                                },
                                checked: repeatPeriod == AppointmentRepeatPeriod.MONTHLY
                            }
                        ]
                    }) }}

                    {{ govukInput({
                        id: "repeatCount",
                        name: "repeatCount",
                        label: {
                            text: "How many appointments are there altogether?",
                            classes: "govuk-label--m"
                        },
                        hint: {
                            text: "Enter the total number of appointments, including the first appointment, up to a maximum of one year."
                        },
                        classes: "govuk-input--width-3",
                        inputmode: "numeric",
                        spellcheck: false,
                        errorMessage: validationErrors | findError('repeatCount'),
                        value: formResponses.repeatCount or session.appointmentJourney.repeatCount
                    }) }}

                    <div data-qa='end-date' class="js-appointment-end-date govuk-body"></div>
                </div>

                {{ govukButton({
                    text: "Continue"
                }) }}
            </form>
        </div>
    </div>
{% endblock %}
