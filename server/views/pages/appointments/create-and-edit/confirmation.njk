{% extends "layout.njk" %}

{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "pages/appointments/partials/appointment-journey-title.njk" import appointmentJourneyTitle %}

{% set pageTitle = appointmentJourneyTitle("Set scheduled" if session.appointmentJourney.type == AppointmentType.BULK else "Appointment scheduled", session.appointmentJourney) %}
{% set pageId = 'appointments-create-confirmation-page' %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            {{ govukPanel({
                titleText: "Set of back-to-backs scheduled" if bulkAppointment else "Appointment scheduled"
            }) }}
            <p class="govuk-body" data-qa="message">
                {% if appointment.appointmentType == AppointmentType.INDIVIDUAL %}
                    You have successfully scheduled an appointment for {{ appointment.prisoners[0] | fullName | toTitleCase }}
                {% elseif appointment.appointmentType == AppointmentType.GROUP %}
                    You have successfully scheduled an appointment for {{ appointment.prisoners | length }} {{ "person" if appointment.prisoners.length == 1 else "people" }}
                {% elseif bulkAppointment %}
                    You have successfully scheduled appointments for {{ bulkAppointment.occurrences | length }} people
                {% endif %}

                {% if not appointment.repeat %}
                    on {{ (appointment.startDate or bulkAppointment.startDate) | toDate | formatDate('EEEE, d MMMM yyyy') }}.
                {% else %}
                    starting on {{ appointment.startDate | toDate | formatDate('EEEE, d MMMM yyyy') }}.
                    It will repeat {{ ("every weekday (Monday to Friday)" if appointment.repeat.period == AppointmentRepeatPeriod.WEEKDAY) +
                                    ("daily (includes weekends)" if appointment.repeat.period == AppointmentRepeatPeriod.DAILY) +
                                    ("weekly" if appointment.repeat.period == AppointmentRepeatPeriod.WEEKLY) +
                                    ("fortnightly" if appointment.repeat.period == AppointmentRepeatPeriod.FORTNIGHTLY) +
                                    ("monthly" if appointment.repeat.period == AppointmentRepeatPeriod.MONTHLY) }}
                    for {{ appointment.repeat.count }}
                    {% if appointment.repeat.count == 1 %}
                        appointment
                    {% else %}
                        appointments
                    {% endif %}
                {% endif %}
            </p>

            <h2 class="govuk-heading-m">What you can do next</h2>
            <p class="govuk-body">
                <a href="/appointments" class="govuk-link govuk-link--no-visited-state" data-qa="create-another-link">Schedule another appointment</a>
            </p>

            {% if bulkAppointment %}
                <p class="govuk-body">
                    <a href="/appointments/bulk-appointments/{{ bulkAppointment.id }}" class="govuk-link govuk-link--no-visited-state" data-qa="view-appointment-link">View, print movement slips and manage this set of appointments</a>
                </p>
            {% else %}
                <p class="govuk-body">
                    <a href="/appointments/{{ appointment.id }}/occurrence/{{ appointment.occurrences[0].id }}" class="govuk-link govuk-link--no-visited-state" data-qa="view-appointment-link">View, print movement slips and manage this appointment</a>
                </p>
            {% endif %}
        </div>
    </div>
{% endblock %}
