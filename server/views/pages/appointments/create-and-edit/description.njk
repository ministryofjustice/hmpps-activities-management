{% extends "layout.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/character-count/macro.njk" import govukCharacterCount %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "pages/appointments/partials/appointment-type-caption.njk" import appointmentTypeCaption %}
{% from "pages/appointments/partials/appointment-journey-title.njk" import appointmentJourneyTitle %}

{% set pageTitle = appointmentJourneyTitle("Description", session.appointmentJourney) %}
{% set pageId = 'appointments-create-description-page' %}
{% set backLinkHref = "category" %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            {{ appointmentTypeCaption(session.appointmentJourney.type) }}
            <form method="POST">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
                {% set descriptionOption = formResponses.descriptionOption or session.appointmentJourney.descriptionOption %}
                {{ govukRadios({
                    name: "descriptionOption",
                    fieldset: {
                        legend: {
                            text: "Do you want to show '" + session.appointmentJourney.category.description + "' on the unlock list?",
                            isPageHeading: true,
                            classes: "govuk-fieldset__legend--l"
                        }
                    },
                    items: [
                        {
                            value: YesNo.YES,
                            text: "Yes - I want '" + session.appointmentJourney.category.description + "' to show on the unlock list",
                            checked: descriptionOption == YesNo.YES
                        },
                        {
                            value: YesNo.NO,
                            text: "No - I want to enter my own appointment name to show on the unlock list",
                            checked: descriptionOption == YesNo.NO,
                            conditional: {
                                  html: nestedDescription()
                            }
                        }
                    ],
                    errorMessage: validationErrors | findError('descriptionOption')
                }) }}

                {{ govukDetails({
                    summaryText: "What is an unlock list?",
                    text: "The unlock list is used by wing officers to make sure people are let out of their cells at the right time to get to their schedued activities and appointments."
                }) }}

                {{ govukButton({
                    text: "Continue"
                }) }}
            </form>
        </div>
    </div>
{% endblock %}

{% macro nestedDescription() %}
    {{ govukCharacterCount({
        label: {
            text: "Enter my own appointment name"
        },
        id: "description",
        name: "description",
        maxlength: 40,
        rows: 1,
        value: formResponses.description or session.appointmentJourney.description,
        errorMessage: validationErrors | findError('description')
    }) }}
{% endmacro %}
