{% extends "layout.njk" %}

{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}
{%- from "moj/components/search/macro.njk" import mojSearch -%}
{% from "partials/showProfileLink.njk" import showProfileLink %}
{% from "pages/appointments/partials/appointment-type-caption.njk" import appointmentTypeCaption %}
{% from "pages/appointments/partials/appointment-journey-title.njk" import appointmentJourneyTitle %}

{% set pageTitle = appointmentJourneyTitle("Review Prisoners", session.appointmentJourney) %}
{% set pageId = 'appointments-create-review-prisoners-page' %}
{% set backLinkHref = "select-prisoner" %}

{% if session.appointmentJourney.mode == AppointmentJourneyMode.EDIT %}
    {% set prisoners = session.editAppointmentJourney.addPrisoners %}
{% else %}
    {% set prisoners = session.appointmentJourney.prisoners %}
{% endif %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            {{ appointmentTypeCaption(session.appointmentJourney.type) }}
            <h1 class="govuk-heading-l">Review and add prisoners to the appointment list</h1>
        </div>
        <div class="govuk-grid-column-two-thirds">
            {% set prisonersList = [] %}
            {% for prisoner in prisoners %}
                {% set prisonersList = (prisonersList.push([
                    {
                        html: showProfileLink({
                            name: prisoner.name,
                            prisonerNumber: prisoner.number,
                            link: true
                        })
                    }, {
                        text: prisoner.cellLocation
                    }, {
                        html: '<a href="review-prisoners/' + prisoner.number + '/remove"
                            class="govuk-link--no-visited-state">
                            Remove<span class="govuk-visually-hidden"> prison number ' + prisoner.number + '</span>
                        </a>',
                        classes: 'govuk-!-text-align-right',
                        attributes: { 'data-qa': 'remove-prison-number-' + prisoner.number }
                    }
                ]), prisonersList) %}
            {% endfor %}

            {% if prisoners.length == 0 %}
                {{ govukWarningText({
                    text: "The appointment list is empty. You must add at least one person to continue." if session.appointmentJourney.mode == AppointmentJourneyMode.EDIT else "The appointment list is empty. You must add at least one person to be able to schedule an appointment.",
                    iconFallbackText: "Warning"
                }) }}

                {{ govukButton({
                    text: "Add someone to the list",
                    href: "how-to-add-prisoners",
                    attributes: { 'data-qa': 'add-prisoner-primary' }
                }) }}
            {% else %}
                {{ govukTable({
                    attributes: {
                        'data-module': 'moj-sortable-table',
                        'data-qa': 'prisoners-list-table'
                    },
                    head: [
                        {
                            text: "Name",
                            attributes: { "aria-sort": "none" },
                            classes: 'govuk-table__header'
                        },
                        {
                            text: "Location",
                            attributes: { "aria-sort": "ascending" },
                            classes: 'govuk-table__header'
                        }, {
                            html: '<span class="govuk-visually-hidden">Actions</span>'
                        }
                    ],
                    rows: prisonersList
                }) }}

            <div class="govuk-button-group">
                {{ govukButton({
                    text: "Add another person",
                    classes: "govuk-button--secondary",
                    href: "how-to-add-prisoners",
                    attributes: { 'data-qa': 'add-prisoner-secondary' }
                }) }}
            </div>

            <form method="POST">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
                <div class="govuk-button-group">
                    {{ govukButton({
                        text: "Continue"
                    }) }}
                </div>
            </form>
            {% endif %}
        </div>
    </div>
{% endblock %}
