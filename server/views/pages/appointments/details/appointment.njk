{% extends "layout.njk" %}

{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% from "partials/appointmentPrisonerSummary.njk" import appointmentPrisonerSummary %}
{% from "pages/appointments/partials/prisoner-list.njk" import prisonerList %}

{% set pageTitle = "Appointments Management - Appointment Series Details" %}
{% set pageId = 'appointment-series-view-details-page' %}

{% set summaryListRows = [
    {
        key: {
            text: "Start date"
        },
        value: {
            text: appointment.startDate | toDate | formatDate('EEEE d MMMM yyyy')
        }
    }
] %}
{% if appointment.repeat != null %}
    {% set summaryListRows = (summaryListRows.push({
        key: {
            text: "Frequency"
        },
        value: {
            text: ("Every weekday (Monday to Friday)" if appointment.repeat.period == AppointmentRepeatPeriod.WEEKDAY) +
                  ("Daily (includes weekends)" if appointment.repeat.period == AppointmentRepeatPeriod.DAILY) +
                  ("Weekly" if appointment.repeat.period == AppointmentRepeatPeriod.WEEKLY) +
                  ("Fortnightly" if appointment.repeat.period == AppointmentRepeatPeriod.FORTNIGHTLY) +
                  ("Monthly" if appointment.repeat.period == AppointmentRepeatPeriod.MONTHLY)
        }
    }), summaryListRows) %}
    {% set summaryListRows = (summaryListRows.push({
        key: {
            text: "Occurrences"
        },
        value: {
            text: appointment.repeat.count
        }
    }), summaryListRows) %}
{% endif %}

{% if appointment.appointmentType == AppointmentType.GROUP and appointment.repeat != null %}
    {% set summaryListRows = (summaryListRows.push({
        key: {
            text: "Prisoners"
        },
        value: {
            text: appointment.prisoners | length
        }
    }), summaryListRows) %}
{% endif %}

{% set occurrenceSummaryListRows = [
    {
        key: {
            text: "Occurrence"
        },
        value: {
            text: "Date",
            classes: "govuk-!-font-weight-bold"
        }
    }
] %}

{% for occurrence in appointment.occurrences %}
    {% set occurrenceDate = occurrence.startDate | toDate %}
    {% set occurrenceSummaryListRows = (occurrenceSummaryListRows.push({
        key: {
            text: occurrence.sequenceNumber,
            classes: "govuk-!-font-weight-regular govuk-!-text-align-right"
        },
        value: {
            text: occurrenceDate | formatDate('d MMM yyyy')
        },
        actions: {
            items: [
                {
                    href: "/appointments/" + appointment.id + "/occurrence/" + occurrence.id,
                    text: "View and edit",
                    visuallyHiddenText: "view and edit appointment " + occurrence.sequenceNumber,
                    classes: "govuk-link--no-visited-state",
                    attributes: { 'data-qa': 'view-and-edit-appointment-' + occurrence.sequenceNumber }
                }
            ]
        }
    }), occurrenceSummaryListRows) %}
{% endfor %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-l">View appointment series details</h1>
            {{ govukSummaryList({
                rows: summaryListRows,
                classes: "govuk-!-margin-bottom-9",
                attributes: { 'data-qa': 'appointment-series-details' }
            }) }}

            {% if appointment.repeat != null %}
                <h2 class="govuk-heading-m" data-qa="occurrences-heading">Appointments</h2>
                {{ govukSummaryList({
                    rows: occurrenceSummaryListRows,
                    classes: "summary-list-row-count govuk-!-margin-bottom-9",
                    attributes: { 'data-qa': 'appointment-occurrences' }
                }) }}
            {% elseif appointment.appointmentType == AppointmentType.GROUP %}
                {{ prisonerList(appointment.prisoners) }}
            {% endif %}

            {{ govukSummaryList({
                rows: [
                    {
                        key: {
                            text: "Created by"
                        },
                        value: {
                            text: appointment.createdBy | fullName | toTitleCase | initialiseName
                        }
                    }
                ],
                classes: "govuk-!-margin-bottom-9",
                attributes: { 'data-qa': 'user-details' }
            }) }}

            <p class="govuk-body govuk-!-display-none-print">
                {{ govukButton({
                    text: "Print movement slip",
                    href: '/appointments/' + appointment.id + '/movement-slip',
                    attributes: {
                        'data-qa': 'print-movement-slip-link'
                    }
                }) }}
            </p>
        </div>
    </div>
{% endblock %}
