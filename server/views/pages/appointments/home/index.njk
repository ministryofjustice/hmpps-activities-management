{% extends "layout.njk" %}
{% from "components/card.njk" import card %}

{% set pageTitle = "Appointments Management" %}
{% set pageId = 'appointments-index-page' %}
{% set backLinkHref = "/" %}

{% block content %}

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <h1 class="govuk-heading-l">Appointments management</h1>

            <div class="card-group">
                <div class="govuk-grid-column-one-third card-group__item">
                    {{ card({
                        "id": "createSingleAppointmentCard",
                        "href": "appointments/create-single",
                        "clickable": "true",
                        "heading": "Create a single appointment",
                        "description": "Create an appointment for a single prisoner in your prison.",
                        "data-qa": "create-single-appointment-card"
                    }) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block pageScripts %}
    <script src="/assets/js/card.js"></script>
{% endblock %}
