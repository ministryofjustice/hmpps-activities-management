{% extends "homepageLayout.njk" %}
{% from "components/card.njk" import card %}

{% set pageTitle = applicationName + " - Create and manage appointments" %}
{% set pageId = 'appointments-management-page' %}
{% set backLinkText = "Digital Prison Services" %}
{% set backLinkHref = dpsUrl %}

{% block heading %}
    <h1 class="govuk-heading-l">Create and manage appointments</h1>
{% endblock %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <div class="card-group govuk-grid-row">
                <div class="govuk-grid-column-one-third card-group__item">
                    {{ card({
                        "id": "createGroupAppointmentCard",
                        "href": "appointments/create/start-group",
                        "clickable": "true",
                        "heading": "Schedule an appointment",
                        "description": "Set up a one-off or repeating appointment for one or more people.",
                        "data-qa": "create-group-appointment-card"
                    }) }}
                </div>
                <div class="govuk-grid-column-one-third card-group__item">
                    {{ card({
                        "id": "createBulkAppointmentCard",
                        "href": "appointments/create/start-bulk",
                        "clickable": "true",
                        "heading": "Schedule a set of back-to-back appointments for the same day",
                        "description": "Set up a set of appointments for a pre-prepared list of people to attend on the same day.",
                        "data-qa": "create-bulk-appointment-card"
                    }) }}
                </div>
                <div class="govuk-grid-column-one-third card-group__item">
                    {{ card({
                        "id": "searchAppointmentsCard",
                        "href": "appointments/search/select-date",
                        "clickable": "true",
                        "heading": "Manage existing appointments",
                        "description": "Change the details for an existing appointment including cancelling the whole appointment, adding and removing people, and printing movement slips.",
                        "data-qa": "search-appointments-card"
                    }) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
