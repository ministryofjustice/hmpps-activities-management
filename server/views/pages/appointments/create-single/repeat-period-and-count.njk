{% extends "layout.njk" %}

{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageTitle = "Appointments Management - Create Single Appointment - Repeat Period and Count" %}
{% set pageId = 'appointments-create-single-repeat-period-and-count-page' %}
{% set backLinkHref = "/date-and-time" %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <span class="govuk-caption-l">{{ session.createSingleAppointmentJourney.title }}</span>
            <h1 class="govuk-heading-l">Add repeat appointment details</h1>
            <form method="POST">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
                {{ govukRadios({
                    name: "repeatPeriod",
                    label: {
                        text: "How often will the appointment repeat?",
                        classes: "govuk-fieldset__legend--m"
                    },
                    errorMessage: validationErrors | findError('repeatPeriod'),
                    items: [
                        {
                            value: "weekday",
                            html: "Every weekday (Monday to Friday)",
                            checked: formResponses.repeatPeriod == 'weekday' or session.createSingleAppointmentJourney.repeatPeriod == 'weekday'
                        },
                        {
                            value: "daily",
                            html: "Daily (includes weekends)",
                            checked: formResponses.repeatPeriod == 'daily' or session.createSingleAppointmentJourney.repeatPeriod == 'daily'
                        },
                        {
                            value: "weekly",
                            html: "Weekly",
                            checked: formResponses.repeatPeriod == 'weekly' or session.createSingleAppointmentJourney.repeatPeriod == 'weekly'
                        },
                        {
                            value: "fortnightly",
                            html: "Fortnightly",
                            checked: formResponses.repeatPeriod == 'fortnightly' or session.createSingleAppointmentJourney.repeatPeriod == 'fortnightly'
                        },
                        {
                            value: "monthly",
                            html: "Monthly",
                            checked: formResponses.repeatPeriod == 'monthly' or session.createSingleAppointmentJourney.repeatPeriod == 'monthly'
                        }
                    ]
                }) }}

                {{ govukInput({
                    id: "repeatCount",
                    name: "repeatCount",
                    label: {
                        text: "How many times will the appointment repeat?",
                        classes: "govuk-fieldset__legend--m"
                    },
                    hint: {
                        text: "Enter the number of times the appointment will repeat up to a maximum of one year"
                    },
                    classes: "govuk-input--width-3",
                    inputmode: "numeric",
                    spellcheck: false,
                    errorMessage: validationErrors | findError('repeatCount'),
                    value: formResponses.repeatCount or session.createSingleAppointmentJourney.repeatCount
                }) }}

                {{ govukButton({
                    text: "Continue"
                }) }}
            </form>
        </div>
    </div>
{% endblock %}
