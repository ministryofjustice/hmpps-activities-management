{% extends "layout.njk" %}

{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageTitle = "Appointments Management - Create Single Appointment - Repeat" %}
{% set pageId = 'appointments-create-single-repeat-page' %}
{% set backLinkHref = "/date-and-time" %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <span class="govuk-caption-l">{{ session.createSingleAppointmentJourney.title }}</span>
            <form method="POST">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
                {{ govukRadios({
                    name: "repeat",
                    fieldset: {
                        legend: {
                            text: "Will the appointment repeat?",
                            classes: "govuk-label--l",
                            isPageHeading: true
                        }
                    },
                    errorMessage: validationErrors | findError('repeat'),
                    items: [
                        {
                            value: "yes",
                            html: "Yes",
                            checked: formResponses.repeat == 'yes' or session.createSingleAppointmentJourney.repeat == 'yes'
                        },
                        {
                            value: "no",
                            html: "No",
                            checked: formResponses.repeat == 'no' or session.createSingleAppointmentJourney.repeat == 'no'
                        }
                    ]
                }) }}

                {{ govukButton({
                    text: "Continue"
                }) }}
            </form>
        </div>
    </div>
{% endblock %}
