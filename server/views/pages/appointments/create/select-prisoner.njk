{% extends "layout.njk" %}

{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "pages/appointments/partials/appointment-type-caption.njk" import appointmentTypeCaption %}

{% set pageTitle = "Appointments Management - Create Appointment - Select Prisoner" %}
{% set pageId = 'appointments-create-select-prisoner-page' %}
{% set backLinkHref = "/appointments" %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            {{ appointmentTypeCaption(session.createAppointmentJourney.type) }}
            <form method="POST">
                {% set defaultPrisonerNumber = formResponses.number %}
                {% if session.createAppointmentJourney.type == 'single' %}
                    {% set defaultPrisonerNumber = defaultPrisonerNumber or session.createAppointmentJourney.prisoners[0].number %}
                {% endif %}
                <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
                {{ govukInput({
                    id: "number",
                    name: "number",
                    label: {
                        text: "What is the prisoner's number?",
                        classes: "govuk-label--l",
                        isPageHeading: true
                    },
                    hint: {
                        text: "Search by prison number"
                    },
                    classes: "govuk-input--width-20",
                    spellcheck: false,
                    errorMessage: validationErrors | findError('number'),
                    value: defaultPrisonerNumber
                }) }}

                {{ govukButton({
                    text: "Continue"
                }) }}
            </form>
        </div>
    </div>
{% endblock %}
