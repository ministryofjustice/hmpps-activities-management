{% extends "layout.njk" %}

{% from "govuk/components/panel/macro.njk" import govukPanel %}

{% set pageTitle = applicationName + " - Create a schedule - Confirmation" %}
{% set pageId = 'create-schedule-confirmation-page' %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            {{ govukPanel({
                titleText: session.createScheduleJourney.name + " created",
                attributes: { 'id': 'createScheduleSuccessText' }
            }) }}
            <h2 class="govuk-heading-m">What you can do next</h2>
            <p class="govuk-body">
                You can start <a href="/allocate/{{ scheduleId }}/allocate#candidates-tab" class="govuk-link">allocating people to this schedule</a>.
            </p>
            <p class="govuk-body">You can also:</p>
            <ul class="govuk-list govuk-list--bullet">
                <li><a href="/schedule/activities/{{ activity.id }}/create-schedule/start">Build another schedule for {{ activity.summary }}</a></li>
                <li><a href="/schedule/activities">Use the activities dashboard</a> to find a different activity</li>
            </ul>
        </div>
    </div>
{% endblock %}
