{% extends "homepageLayout.njk" %}
{% from "components/card.njk" import card %}

{% set pageTitle = applicationName + " - Record attendance" %}
{% set pageId = 'record-attendance' %}
{% set backLinkHref = "/" %}

{% block heading %}
    <h1 class="govuk-heading-l">Record attendance</h1>
{% endblock %}

{% block content %}
    <div class="card-group govuk-grid-row">
        <div class="govuk-grid-column-one-third card-group__item">
            {{ card({
                "id": "RecordAttendance",
                "href": "/attendance/select-period",
                "clickable": "true",
                "heading": "Record attendance and cancel activity sessions",
                "description": "Mark and update attendance. Cancel individual activity sessions.",
                "data-qa": "record-attendance"
            }) }}
        </div>
        <div class="govuk-grid-column-one-third card-group__item">
            {{ card({
                "id": "ViewDailyAttendanceSummary",
                "href": "/attendance-summary/select-period",
                "clickable": "true",
                "heading": "View daily attendance summary",
                "description": "See daily attendance figures, including details of who is not attended yet, absent or suspended. Check details of cancelled sessions.",
                "data-qa": "view-daily-attendance-summary"
            }) }}
        </div>
        {# TODO: Update with page URL once built #}
        <div class="govuk-grid-column-one-third card-group__item">
            {{ card({
                "id": "ViewNotAttended",
                "href": "#",
                "clickable": "true",
                "heading": "View lists of people who are not yet attended",
                "description": "See details of who hasn't had their attendance marked.",
                "data-qa": "view-not-attended"
            }) }}
        </div>
    </div>
{% endblock %}
