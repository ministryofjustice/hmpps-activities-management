{% extends "layout.njk" %}

{% from "govuk/components/panel/macro.njk" import govukPanel %}

{% set pageTitle = applicationName + " - Create an activity - Confirmation" %}
{% set pageId = 'confirmation-page' %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            {{ govukPanel({
                titleText: session.createJourney.name + " created"
            }) }}
            <h2 class="govuk-heading-m">What you can do next</h2>
            <p class="govuk-body">
                Your activity has been created and you can <a href="#" class="govuk-link">start building new schedules for it</a>
            </p>
        </div>
    </div>
{% endblock %}
