{% extends "layout.njk" %}

{% from "govuk/components/panel/macro.njk" import govukPanel %}

{% set pageTitle = applicationName + " - Create an activity - Confirmation" %}
{% set pageId = 'confirmation-page' %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            {{ govukPanel({
                titleText: "You've created a new activity for " + session.createJourney.name
            }) }}
            <h2 class="govuk-heading-l">What you can do next</h2>
            <p class="govuk-body">
                You can <a href="/allocate/{{ id }}/allocate" class="govuk-link govuk-link--no-visited-state">start allocating people to this activity</a>
            </p>
            <p class='govuk-body'>You can also:</p>
            <ul>
                <li class='govuk-list govuk-list--bullet'>
                    <a href='/create/category' class='govuk-link govuk-link--no-visited-state'>Create another activity</a>
                </li>
                <li class='govuk-list govuk-list--bullet'>
                    Use activities dashboard to <a href='/schedule/activities' class='govuk-link govuk-link--no-visited-state'>edit an existing activity</a>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
