{% extends "layout.njk" %}

{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageTitle = applicationName + " - Create a schedule - Capacity" %}
{% set pageId = 'create-schedule-capacity-page' %}
{% set backLinkHref = "/" %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <span class="govuk-caption-m">{{ session.createJourney.category.name }} | Risk level: {{ session.createJourney.riskLevel | toTitleCase }} | Minimum incentive: {{ session.createJourney.minimumIncentiveLevel }}</span>
            <span class="govuk-heading-m">{{ session.createJourney.name }}</span>
        </div>
    </div>
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <form method="POST">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
                {{ govukInput({
                    label: {
                        text: "How many people can be allocated to this schedule?",
                        classes: "govuk-label--xl",
                        isPageHeading: true
                    },
                    hint: {
                        html: "
                            <p>Enter the maximum number (known as capacity) of people who can be allocated.</p>
                            <p>You'll be able to allocate more people than the schedule's capacity to ensure the activity is not short-handed</p>
                        "
                    },
                    id: "capacity",
                    name: "capacity",
                    inputmode: "numeric",
                    spellcheck: false,
                    classes: "govuk-input--width-5",
                    errorMessage: validationErrors | findError('capacity'),
                    value: formResponses.capacity or session.createJourney.capacity
                }) }}
                {{ govukButton({
                    text: "Continue"
                }) }}
            </form>
        </div>
    </div>
{% endblock %}
