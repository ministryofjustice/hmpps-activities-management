{% extends "layout.njk" %}

{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageTitle = applicationName + " - Create an activity - Check education levels" %}
{% set pageId = 'check-education-levels-page' %}
{% set backLinkHref = "education-level" %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-three-quarters">
            <span class="govuk-caption-m">{{ session.createJourney.category.name }} | Risk level: {{ session.createJourney.riskLevel | toTitleCase }} | Minimum incentive: {{ session.createJourney.minimumIncentiveLevel }}</span>
            <h1 class="govuk-heading-m">{{ session.createJourney.name }}</span>

            <h2 class='govuk-heading-l'>Review education levels and qualifications</h2>
            
            {% if educationLevels | length %}
                <h3 class='govuk-heading-m'>Level or qualification</h3>
            {% else %}
                <p class="govuk-body">No levels or qualifications added</p>
            {% endif %}

            {% if session.req.query.fromEditActivity %}
                {% set fromEditText = "&fromEditActivity=true" %}
            {% else %}
                {% set fromEditText = "" %}
            {% endif %}
            {% for educationLevel in educationLevels %}
                {% set rows = [] %}
                    {% set rows = (rows.push(
                    {
                        key: {
                            text: educationLevel.educationLevelDescription
                        },
                        value: {
                            text: educationLevel.studyAreaDescription
                        },
                        actions: {
                            items: [
                                {
                                    href: "remove-education-level?eduLevel=" + educationLevel.educationLevelCode + "&studyArea=" + educationLevel.studyAreaCode + fromEditText,
                                    text: "Remove",
                                    visuallyHiddenText: "remove education level"
                                }
                            ]
                        }
                    }
                    ), rows) %}
                {{ govukSummaryList({
                    rows: rows
                }) }}
            {% endfor %}

            <form method="POST">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
                <div>
                    {{ govukButton({
                        text: "Add a qualification",
                        href: 'education-level' + ('?fromEditActivity=true' if session.req.query.fromEditActivity),
                        classes: "govuk-button--secondary govuk-!-margin-bottom-8"
                    }) }}
                </div>
                {{ govukButton({
                    text: "Continue"
                }) }}
            </form>
        </div>
    </div>
{% endblock %}
