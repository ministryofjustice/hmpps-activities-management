{% extends "layout.njk" %}

{% from "govuk/components/table/macro.njk" import govukTable %}

{% set pageTitle = applicationName + " - Allocate to an activity - Activities" %}
{% set pageId = 'allocate-to-activity-activities-page' %}
{% set backLinkHref = "/" %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-xl">Find activities with vacancies</h1>
        </div>
        <div class="govuk-grid-column-one-third">
            <div class='related-tasks'>
                <ul class='govuk-list'>
                    <li><a href="/create/start" class="govuk-link govuk-link--no-visited-state">Create an activity</a></li>
                    <li><a href="/schedule/activities" class="govuk-link govuk-link--no-visited-state">Edit activities</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <p>Select the relevant activity and start allocating people to them.</p>

            {% set rows = [
                [
                    {
                        html: '<h2 class="govuk-heading-m govuk-!-margin-bottom-0">Total</h2>',
                        attributes: {
                            "data-sort-fixed": "bottom"
                        }
                    },
                    {
                        attributes: {
                            id: 'category-total',
                            "data-sort-fixed": "bottom"
                        },
                        text: ''
                    },
                    {
                        attributes: {
                            id: 'capacity-total',
                            "data-sort-fixed": "bottom"
                        },
                        classes: 'govuk-table__cell--numeric govuk-!-font-weight-bold',
                        text: total.capacity
                    },
                    {
                        attributes: {
                            id: 'allocated-total',
                            "data-sort-fixed": "bottom"
                        },
                        classes: 'govuk-table__cell--numeric govuk-!-font-weight-bold',
                        text: total.allocated
                    },
                    {
                        attributes: {
                            id: 'percentage-allocated-total',
                            "data-sort-fixed": "bottom"
                        },
                        classes: 'govuk-table__cell--numeric govuk-!-font-weight-bold',
                        text: total.percentageAllocated + '%'
                    },
                    {
                        attributes: {
                            id: 'vacancies-total',
                            "data-sort-fixed": "bottom"
                        },
                        classes: 'govuk-table__cell--numeric govuk-!-font-weight-bold',
                        text: total.vacancies
                    }
                ]
            ] %}

            {% for activity in activities %}
                {% set rows = (rows.push([
                    {
                        attributes: {
                            id: 'activity-' + loop.index,
                            "data-sort-value": activity.summary
                        },
                        html: '
                                <h2 class="govuk-heading-m govuk-!-margin-bottom-0">
                                    <a href="/allocation-dashboard/' + activity.schedules[0].id + '" class="govuk-link govuk-link--no-visited-state">' + activity.summary + '</a>
                                </h2>
                              '
                    },
                    {
                        attributes: {
                            id: 'category-' + loop.index,
                            "data-sort-value": activity.category.name
                        },
                        text: activity.category.name
                    },
                    {
                        attributes: {
                            id: 'capacity-' + loop.index,
                            "data-sort-value": activity.allocationSummary.capacity
                        },
                        classes: 'govuk-table__cell--numeric',
                        text: activity.allocationSummary.capacity
                    },
                    {
                        attributes: {
                            id: 'allocated-' + loop.index,
                            "data-sort-value": activity.allocationSummary.allocated
                        },
                        classes: 'govuk-table__cell--numeric',
                        text: activity.allocationSummary.allocated
                    },
                    {
                        attributes: {
                            id: 'percentage-allocated-' + loop.index,
                            "data-sort-value": activity.allocationSummary.percentageAllocated
                        },
                        classes: 'govuk-table__cell--numeric',
                        text: activity.allocationSummary.percentageAllocated + '%'
                    },
                    {
                        attributes: {
                            id: 'vacancies-' + loop.index,
                            "data-sort-value": activity.allocationSummary.vacancies
                        },
                        classes: 'govuk-table__cell--numeric',
                        html: '
                                <span class="govuk-tag govuk-tag--' + ('green' if activity.allocationSummary.vacancies <= 0 else 'red') + '">' + activity.allocationSummary.vacancies + '</span>
                              '
                    }
                ]), rows) %}
            {% endfor %}

            {{ govukTable({
                attributes: {
                    'data-module': 'moj-sortable-table',
                    'data-table-fixed-rows': 'true'
                },
                caption: "Activities",
                captionClasses: "govuk-visually-hidden",
                head: [
                    {
                        text: "Activity name",
                        attributes: {
                            "aria-sort": "ascending"
                        }
                    },
                    {
                        text: "Category",
                        attributes: {
                            "aria-sort": "none"
                        }
                    },
                    {
                        text: "Capacity",
                        attributes: {
                            "aria-sort": "none"
                        },
                        classes: 'govuk-table__header--numeric'
                    },
                    {
                        text: "Allocated",
                        attributes: {
                            "aria-sort": "none"
                        },
                        classes: 'govuk-table__header--numeric'
                    },
                    {
                        text: "Percentage allocated",
                        attributes: {
                            "aria-sort": "none"
                        },
                        classes: 'govuk-table__header--numeric'
                    },
                    {
                        text: "Vacancies",
                        attributes: {
                            "aria-sort": "none"
                        },
                        classes: 'govuk-table__header--numeric'
                    }
                ],
                rows: rows
            }) }}
        </div>
    </div>
{% endblock %}
