{% extends "layout.njk" %}

{% set pageTitle = "Appointments attendance information" %}
{% set pageId = 'appointments-reporting-home-page' %}
{% set jsBackLink = true %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-three-quarters">
            <span class="govuk-caption-l">View appointments attendance information</span>
            <h1 class="govuk-heading-l">{{ pageTitle }}</h1>

            {% for report in reports %}
                {% if not report.roleRequired or 'ROLE_ACTIVITY_HUB' in user.roles %}
                    <section>
                        <p class="govuk-body govuk-!-margin-bottom-1"><a href="{{ report.href }}">{{ report.title }}</a></p>
                        <p class="govuk-body">{{ report.description }}</p>
                        <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
                    </section>
                {% endif %}
            {% endfor %}
        </div>
    </div>
{% endblock %}
