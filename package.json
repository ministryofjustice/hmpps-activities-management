{
  "name": "hmpps-activities-management",
  "version": "0.0.1",
  "description": "Hmpps Activities Management",
  "repository": "git@github.com:ministryofjustice/hmpps-activities-management.git",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "copy-views": "cp -R server/views dist/server/",
    "compile-assets": "grunt",
    "watch-ts": "tsc -w",
    "watch-views": "nodemon --watch server/views -e html,njk -x npm run copy-views",
    "watch-node": "DEBUG=gov-starter-server* nodemon --watch dist/ dist/server.js | bunyan -o short",
    "watch-assets": "grunt watch",
    "build": "rm -rf dist && npm run compile-assets && tsc && npm run copy-views",
    "start": "node $NODE_OPTIONS -r dotenv/config dist/server.js | bunyan -o short",
    "start:dev": "npm run build && concurrently -k -p \"[{name}]\" -n \"Views,TypeScript,Node,Sass\" -c \"yellow.bold,cyan.bold,green.bold,blue.bold\" \"npm run watch-views\" \"npm run watch-ts\" \"npm run watch-node\" \"npm run watch-assets\"",
    "start-feature": "export $(cat feature.env) && node $NODE_DEBUG_OPTION dist/server.js | bunyan -o short",
    "watch-node-feature": "export $(cat feature.env) && nodemon --watch dist/ $NODE_DEBUG_OPTION dist/server.js | bunyan -o short",
    "start-feature:dev": "npm run build && concurrently -k -p \"[{name}]\" -n \"Views,TypeScript,Node,Sass\" -c \"yellow.bold,cyan.bold,green.bold,blue.bold\" \"npm run watch-views\" \"npm run watch-ts\" \"npm run watch-node-feature\" \"npm run watch-assets\"",
    "record-build-info": "node ./bin/record-build-info",
    "lint": "eslint . --cache --max-warnings 0",
    "lint:fix": "eslint . --cache --max-warnings 0 --fix",
    "typecheck": "tsc && tsc -p integration_tests",
    "test": "NODE_ENV=unit-test jest --runInBand --detectOpenHandles --collectCoverage=true --testPathPattern=server/.*",
    "security_audit": "better-npm-audit audit",
    "int-test": "cypress run --config video=false",
    "int-test-ui": "cypress open",
    "clean": "rm -rf dist assets build node_modules stylesheets"
  },
  "engines": {
    "node": "^18",
    "npm": "^9"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/(server|job)/**/?(*.)(cy|test).{ts,js,jsx,mjs}"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>jest.setup.ts"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      ".circleci/*",
      "migrations/*",
      "node_modules/*",
      "test/*",
      "integration_tests/*"
    ],
    "delay": 2500,
    "ext": "js,json,html,njk"
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@hmcts/uk-bank-holidays": "^1.0.2",
    "@ministryofjustice/frontend": "^1.6.4",
    "@types/lodash": "^4.14.186",
    "accessible-autocomplete": "^2.0.4",
    "agentkeepalive": "^4.2.1",
    "applicationinsights": "^2.4.1",
    "body-parser": "^1.20.0",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "connect-redis": "^6.1.3",
    "csurf": "^1.11.0",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.2",
    "eslint-import-resolver-typescript": "^3.5.0",
    "eslint-plugin-no-only-tests": "^3.0.0",
    "express": "^4.18.1",
    "express-prom-bundle": "^6.6.0",
    "express-session": "^1.17.3",
    "govuk-frontend": "^4.5.0",
    "helmet": "^6.0.0",
    "http-errors": "^2.0.0",
    "jquery": "^3.6.3",
    "jquery-ui-dist": "^1.13.2",
    "jwt-decode": "^3.1.2",
    "lodash": "^4.17.21",
    "nocache": "^3.0.4",
    "nunjucks": "^3.2.3",
    "passport": "^0.6.0",
    "passport-oauth2": "^1.6.1",
    "prom-client": "^14.1.1",
    "redis": "^4.6.4",
    "reflect-metadata": "^0.1.13",
    "superagent": "^8.0.9",
    "url-value-parser": "^2.1.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@jest-mock/express": "^2.0.1",
    "@types/bunyan": "^1.8.8",
    "@types/bunyan-format": "^0.2.5",
    "@types/compression": "^1.7.2",
    "@types/connect-flash": "0.0.37",
    "@types/connect-redis": "^0.0.19",
    "@types/csurf": "^1.11.2",
    "@types/express-request-id": "^3.0.0",
    "@types/express-session": "^1.17.5",
    "@types/http-errors": "^2.0.1",
    "@types/jest": "^29.4.0",
    "@types/jest-when": "^3.5.2",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.11.18",
    "@types/nunjucks": "^3.2.1",
    "@types/passport": "^1.0.10",
    "@types/passport-oauth2": "^1.4.11",
    "@types/superagent": "^4.1.15",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "axe-core": "^4.6.3",
    "better-npm-audit": "^3.7.3",
    "cheerio": "^1.0.0-rc.12",
    "concurrently": "^7.3.0",
    "cypress": "^12.5.0",
    "cypress-axe": "^1.3.0",
    "cypress-multi-reporters": "^1.6.2",
    "eslint": "^8.33.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "grunt": "^1.6.1",
    "grunt-contrib-concat": "^2.1.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-sass": "^2.0.0",
    "grunt-contrib-uglify": "^5.2.2",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-umd": "^3.0.0",
    "husky": "^8.0.3",
    "jest": "^29.4.1",
    "jest-html-reporter": "^3.6.0",
    "jest-junit": "^15.0.0",
    "jest-when": "^3.5.1",
    "jsonwebtoken": "^9.0.0",
    "lint-staged": "^13.0.3",
    "mocha-junit-reporter": "^2.0.2",
    "nock": "^13.3.0",
    "nodemon": "^2.0.19",
    "openapi-typescript": "^6.1.0",
    "prettier": "^2.8.3",
    "prettier-plugin-jinja-template": "^0.0.5",
    "sass": "^1.58.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  }
}
