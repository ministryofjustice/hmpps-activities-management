    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "axe-core": "^4.9.1",
    "better-npm-audit": "^3.7.3",
    "cheerio": "^1.0.0-rc.12",
    "concurrently": "^9.0.1",
    "cypress": "^13.11.0",
