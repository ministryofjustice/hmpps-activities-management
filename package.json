{
  "name": "hmpps-activities-management",
  "version": "0.0.1",
  "description": "Hmpps Activities Management",
  "repository": "git@github.com:ministryofjustice/hmpps-activities-management.git",
  "license": "MIT",
  "scripts": {
    "prepare": "husky",
    "watch-ts": "tsc -w",
    "build": "node esbuild/esbuild.config.js --build",
    "start": "node $NODE_OPTIONS -r dotenv/config dist/server.js | bunyan -o short",
    "start:dev": "concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js --build --watch\" \"node esbuild/esbuild.config.js --dev-server\"",
    "start-feature": "export $(cat feature.env) && node $NODE_DEBUG_OPTION dist/server.js | bunyan -o short",
    "start-feature:dev": "export $(cat feature.env) && concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js --build --watch\" \"node esbuild/esbuild.config.js --dev-test-server\"",
    "lint": "eslint . --cache --max-warnings 0",
    "lint:fix": "eslint . --cache --max-warnings 0 --fix",
    "typecheck": "tsc && tsc -p integration_tests",
    "test": "NODE_ENV=unit-test TZ=utc NODE_OPTIONS=--experimental-vm-modules jest --runInBand --detectOpenHandles --collectCoverage=true --testPathPattern='(server|frontend)/.*'",
    "security_audit": "better-npm-audit audit",
    "int-test": "cypress run --config video=false",
    "int-test-ui": "cypress open --config watchForFileChanges=false",
    "clean": "rm -rf dist node_modules",
    "rebuild": "npm run clean && npm i && npm run build"
  },
  "engines": {
    "node": "^22",
    "npm": "^11"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/(server|frontend|job)/**/?(*.)(cy|test).{ts,js,jsx,mjs}"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>jest.setup.ts"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.[tj]sx?$": [
        "ts-jest",
        {
          "isolatedModules": true
        }
      ]
    },
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "mjs",
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@hmcts/uk-bank-holidays": "^1.0.2",
    "@microsoft/applicationinsights-web": "^3.3.6",
    "@ministryofjustice/frontend": "^3.7.0",
    "@ministryofjustice/hmpps-connect-dps-components": "^2.1.0",
    "@ministryofjustice/hmpps-digital-prison-reporting-frontend": "^4.1.5",
    "@types/express-serve-static-core": "^4.19.6",
    "@types/lodash": "^4.17.16",
    "accessible-autocomplete": "^3.0.1",
    "agentkeepalive": "^4.6.0",
    "applicationinsights": "^2.9.6",
    "body-parser": "^1.20.3",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "chart.js": "^4.4.8",
    "chartjs-plugin-datalabels": "^2.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "compression": "^1.8.0",
    "connect-flash": "^0.1.1",
    "connect-redis": "^8.0.1",
    "csrf-sync": "^4.0.3",
    "csv-parse": "^5.6.0",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-prom-bundle": "^7.0.2",
    "express-session": "^1.18.1",
    "govuk-frontend": "^5.9.0",
    "helmet": "^8.0.0",
    "http-errors": "^2.0.0",
    "isbinaryfile": "^5.0.4",
    "jquery": "^3.7.1",
    "jwt-decode": "^4.0.0",
    "lodash": "^4.17.21",
    "multer": "^1.4.5-lts.1",
    "nocache": "^4.0.0",
    "nunjucks": "^3.2.4",
    "openapi-typescript": "^7.6.1",
    "passport": "^0.7.0",
    "passport-oauth2": "^1.8.0",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.2",
    "superagent": "^10.1.1",
    "url-value-parser": "^2.2.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@jgoz/esbuild-plugin-typecheck": "^4.0.3",
    "@ministryofjustice/eslint-config-hmpps": "^0.0.1-beta.2",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@tsconfig/node22": "^22.0.0",
    "@types/bunyan": "^1.8.11",
    "@types/bunyan-format": "^0.2.9",
    "@types/compression": "^1.7.5",
    "@types/connect-flash": "^0.0.40",
    "@types/express-session": "^1.18.1",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.14",
    "@types/jest-when": "^3.5.5",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.9",
    "@types/nunjucks": "^3.2.6",
    "@types/passport": "^1.0.17",
    "@types/passport-oauth2": "^1.4.17",
    "@types/sinon": "^17.0.4",
    "@types/superagent": "^8.1.9",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "axe-core": "^4.10.3",
    "better-npm-audit": "^3.11.0",
    "cheerio": "^1.0.0",
    "chokidar": "^3.6.0",
    "concurrently": "^9.1.2",
    "cypress": "^14.1.0",
    "cypress-axe": "^1.6.0",
    "cypress-circleci-reporter": "^0.3.0",
    "cypress-file-upload": "^5.0.8",
    "cypress-multi-reporters": "^2.0.5",
    "esbuild": "^0.25.0",
    "esbuild-plugin-clean": "^1.0.1",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-plugin-manifest": "^1.0.5",
    "esbuild-sass-plugin": "^3.3.1",
    "glob": "^11.0.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-date": "^1.1.6",
    "jest-html-reporter": "^4.0.1",
    "jest-junit": "^16.0.0",
    "jest-when": "^3.7.0",
    "jsonwebtoken": "^9.0.2",
    "lint-staged": "^15.4.3",
    "nock": "^13.5.6",
    "prettier": "^3.5.3",
    "prettier-plugin-jinja-template": "^2.0.0",
    "sinon": "^19.0.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "overrides": {
    "path-to-regexp": "~0.1.12",
    "undici": "~6.21.1",
    "serialize-javascript": "~6.0.2",
    "@jgoz/esbuild-plugin-typecheck": {
      "esbuild": "$esbuild"
    }
  }
}
