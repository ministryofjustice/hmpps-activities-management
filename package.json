{
  "name": "hmpps-activities-management",
  "version": "0.0.1",
  "description": "Hmpps Activities Management",
  "repository": "git@github.com:ministryofjustice/hmpps-activities-management.git",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "compile-assets": "grunt",
    "watch-node": "ts-node-dev --watch .env --respawn server.ts",
    "watch-assets": "npm run build:dev && grunt watch",
    "build": "npm run compile-assets && tsc",
    "build:dev": "npx grunt clean-dev-build",
    "start": "node $NODE_OPTIONS -r dotenv/config dist/server.js | bunyan -o short",
    "start:dev": "NODE_ENV=live-development concurrently --kill-signal=SIGKILL -k -p \"[{name}]\" -n \"TypeScript,Assets\" -c \"green.bold,blue.bold\" \"npm run watch-node\" \"npm run watch-assets\"",
    "start-feature": "export $(cat feature.env) && node $NODE_DEBUG_OPTION dist/server.js | bunyan -o short",
    "start-feature:dev": "export $(cat feature.env) && npm run start:dev",
    "record-build-info": "node ./bin/record-build-info",
    "lint": "eslint . --cache --max-warnings 0",
    "lint:fix": "eslint . --cache --max-warnings 0 --fix",
    "typecheck": "tsc && tsc -p integration_tests",
    "test": "NODE_ENV=unit-test NODE_OPTIONS=--experimental-vm-modules jest --runInBand --detectOpenHandles --collectCoverage=true --testPathPattern='(server|frontend)/.*'",
    "security_audit": "better-npm-audit audit",
    "int-test": "cypress run --config video=false",
    "int-test-ui": "cypress open",
    "clean": "rm -rf dist assets build node_modules stylesheets"
  },
  "engines": {
    "node": "^18",
    "npm": "^9"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/(server|frontend|job)/**/?(*.)(cy|test).{ts,js,jsx,mjs}"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>jest.setup.ts"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "mjs",
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@hmcts/uk-bank-holidays": "^1.0.2",
    "@ministryofjustice/frontend": "^1.8.0",
    "@types/express-serve-static-core": "^4.17.35",
    "@types/lodash": "^4.14.195",
    "accessible-autocomplete": "^2.0.4",
    "agentkeepalive": "^4.3.0",
    "applicationinsights": "^2.7.0",
    "body-parser": "^1.20.2",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "connect-redis": "^7.1.0",
    "csurf": "^1.11.0",
    "csv-parse": "^5.4.0",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "eslint-import-resolver-typescript": "^3.5.0",
    "eslint-plugin-no-only-tests": "^3.0.0",
    "express": "^4.18.1",
    "express-prom-bundle": "^6.6.0",
    "express-request-id": "^3.0.0",
    "express-session": "^1.17.3",
    "govuk-frontend": "^4.7.0",
    "helmet": "^7.0.0",
    "http-errors": "^2.0.0",
    "isbinaryfile": "^5.0.0",
    "jquery": "^3.7.0",
    "jwt-decode": "^3.1.2",
    "lodash": "^4.17.21",
    "multer": "^1.4.5-lts.1",
    "nocache": "^4.0.0",
    "nunjucks": "^3.2.4",
    "passport": "^0.6.0",
    "passport-oauth2": "^1.7.0",
    "prom-client": "^14.2.0",
    "redis": "^4.6.7",
    "reflect-metadata": "^0.1.13",
    "superagent": "^8.0.9",
    "url-value-parser": "^2.1.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@jest-mock/express": "^2.0.2",
    "@rollup/plugin-commonjs": "^25.0.2",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@types/bunyan": "^1.8.8",
    "@types/bunyan-format": "^0.2.5",
    "@types/compression": "^1.7.2",
    "@types/connect-flash": "0.0.37",
    "@types/csurf": "^1.11.2",
    "@types/express-session": "^1.17.7",
    "@types/http-errors": "^2.0.1",
    "@types/jest": "^29.5.3",
    "@types/jest-when": "^3.5.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.4.2",
    "@types/nunjucks": "^3.2.3",
    "@types/passport": "^1.0.12",
    "@types/passport-oauth2": "^1.4.12",
    "@types/superagent": "^4.1.18",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "axe-core": "^4.7.2",
    "better-npm-audit": "^3.7.3",
    "cheerio": "^1.0.0-rc.12",
    "concurrently": "^8.2.0",
    "cypress": "^12.17.3",
    "cypress-axe": "^1.4.0",
    "cypress-file-upload": "^5.0.8",
    "cypress-multi-reporters": "^1.6.3",
    "eslint": "^8.44.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-cypress": "^2.13.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^3.0.0",
    "grunt": "^1.6.1",
    "grunt-contrib-clean": "^2.0.1",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-sass": "^2.0.0",
    "grunt-contrib-uglify": "^5.2.2",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-rollup": "^12.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "jest-html-reporter": "^3.10.1",
    "jest-junit": "^16.0.0",
    "jest-when": "^3.5.1",
    "jsonwebtoken": "^9.0.1",
    "lint-staged": "^13.2.3",
    "mocha-junit-reporter": "^2.2.1",
    "nock": "^13.3.1",
    "openapi-typescript": "^6.3.4",
    "prettier": "^2.8.8",
    "prettier-plugin-jinja-template": "^0.5.0",
    "rollup": "^3.26.2",
    "sass": "^1.63.6",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  },
  "overrides": {
    "@cypress/request": "^3.0.0"
  }
}
