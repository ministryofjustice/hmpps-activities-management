{
  "name": "hmpps-activities-management",
  "version": "0.0.1",
  "description": "Hmpps Activities Management",
  "repository": "git@github.com:ministryofjustice/hmpps-activities-management.git",
  "license": "MIT",
  "scripts": {
    "prepare": "husky",
    "watch-ts": "tsc -w",
    "build": "node esbuild/esbuild.config.js --build",
    "start": "node $NODE_OPTIONS -r dotenv/config dist/server.js | bunyan -o short",
    "start:dev": "concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js --build --watch\" \"node esbuild/esbuild.config.js --dev-server\"",
    "start-feature": "export $(cat feature.env) && node $NODE_DEBUG_OPTION dist/server.js | bunyan -o short",
    "start-feature:dev": "export $(cat feature.env) && concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js --build --watch\" \"node esbuild/esbuild.config.js --dev-test-server\"",
    "lint": "eslint . --cache --max-warnings 0",
    "lint:fix": "eslint . --cache --max-warnings 0 --fix",
    "typecheck": "tsc && tsc -p integration_tests",
    "test": "NODE_ENV=unit-test TZ=utc NODE_OPTIONS=\"--max_old_space_size=4096 --experimental-vm-modules\" jest --runInBand --detectOpenHandles --collectCoverage=true --testPathPatterns='(server|frontend)/.*'",
    "test:ci": "jest --runInBand",
    "security_audit": "better-npm-audit audit",
    "int-test": "cypress run --config video=false",
    "int-test-ui": "cypress open --config watchForFileChanges=false",
    "clean": "rm -rf dist node_modules",
    "rebuild": "npm run clean && npm i && npm run build"
  },
  "engines": {
    "node": "^24",
    "npm": "^11"
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@microsoft/applicationinsights-web": "^3.3.10",
    "@ministryofjustice/frontend": "^7.1.0",
    "@ministryofjustice/hmpps-auth-clients": "^1.0.0",
    "@ministryofjustice/hmpps-connect-dps-components": "^5.2.0",
    "@ministryofjustice/hmpps-digital-prison-reporting-frontend": "^4.17.4",
    "@ministryofjustice/hmpps-rest-client": "^1.0.0",
    "@types/express-serve-static-core": "^5.1.0",
    "@types/lodash": "^4.17.20",
    "accessible-autocomplete": "^3.0.1",
    "agentkeepalive": "^4.6.0",
    "applicationinsights": "^2.9.8",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.8.1",
    "connect-flash": "^0.1.1",
    "connect-redis": "^9.0.0",
    "csrf-sync": "^4.2.1",
    "csv-parse": "^6.1.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "govuk-frontend": "^5.13.0",
    "helmet": "^8.1.0",
    "http-errors": "^2.0.0",
    "isbinaryfile": "^5.0.7",
    "jwt-decode": "^4.0.0",
    "libphonenumber-js": "^1.12.26",
    "lodash": "^4.17.21",
    "multer": "^2.0.2",
    "nocache": "^4.0.0",
    "nunjucks": "^3.2.4",
    "passport": "^0.7.0",
    "passport-oauth2": "^1.8.0",
    "redis": "^5.9.0",
    "reflect-metadata": "^0.2.2",
    "superagent": "^10.2.3"
  },
  "devDependencies": {
    "@jgoz/esbuild-plugin-typecheck": "^4.0.4",
    "@ministryofjustice/eslint-config-hmpps": "^1.0.1",
    "@tsconfig/node24": "^24.0.2",
    "@types/bunyan": "^1.8.11",
    "@types/bunyan-format": "^0.2.9",
    "@types/compression": "^1.8.1",
    "@types/connect-flash": "^0.0.40",
    "@types/express": "^5.0.5",
    "@types/express-session": "^1.18.2",
    "@types/http-errors": "^2.0.5",
    "@types/jest-when": "^3.5.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.1",
    "@types/nunjucks": "^3.2.6",
    "@types/passport": "^1.0.17",
    "@types/passport-oauth2": "^1.8.0",
    "@types/sinon": "^21.0.0",
    "@types/superagent": "^8.1.9",
    "axe-core": "^4.11.0",
    "better-npm-audit": "^3.11.0",
    "cheerio": "^1.1.2",
    "chokidar": "^3.6.0",
    "concurrently": "^9.2.1",
    "cypress": "^15.6.0",
    "cypress-axe": "^1.7.0",
    "cypress-file-upload": "^5.0.8",
    "cypress-multi-reporters": "^2.0.5",
    "cypress-split": "^1.24.25",
    "esbuild": "^0.27.0",
    "esbuild-plugin-clean": "^1.0.1",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-plugin-manifest": "^1.0.5",
    "esbuild-sass-plugin": "^3.3.1",
    "glob": "^12.0.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-date": "^1.1.6",
    "jest-html-reporter": "^4.3.0",
    "jest-junit": "^16.0.0",
    "jest-when": "^3.7.0",
    "jsonwebtoken": "^9.0.2",
    "lint-staged": "^16.2.6",
    "mocha-junit-reporter": "^2.2.1",
    "nock": "^13.5.6",
    "openapi-typescript": "^7.10.1",
    "prettier": "^3.6.2",
    "prettier-plugin-jinja-template": "^2.1.0",
    "sinon": "^21.0.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "serialize-javascript": "~7.0.0",
    "@jgoz/esbuild-plugin-typecheck": {
      "esbuild": "$esbuild"
    },
    "js-yaml": "^4.1.1",
    "validator": "~13.15.23",
    "@types/validator": "~13.15.9"
  }
}
