    "grunt-rollup": "^12.0.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-date": "^1.1.6",
    "jest-html-reporter": "^3.10.2",
    "jest-junit": "^16.0.0",
    "jest-when": "^3.6.0",
    "jsonwebtoken": "^9.0.2",
    "lint-staged": "^15.2.10",
    "mocha-junit-reporter": "^2.2.1",
    "nock": "^13.5.4",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.2",
    "prettier-plugin-jinja-template": "^2.0.0",
    "rollup": "~4.22.4",
    "sass": "^1.77.5",
    "sinon": "^19.0.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "overrides": {
    "rollup": "~4.22.4",
    "cookie": "~1.0.1"
  }
}
