    "@types/csurf": "^1.11.5",
    "@types/express-session": "^1.18.0",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.14",
    "@types/jest-when": "^3.5.5",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.14.2",
    "@types/nunjucks": "^3.2.6",
    "@types/passport": "^1.0.17",
    "@types/passport-oauth2": "^1.4.17",
    "@types/sinon": "^17.0.3",
    "@types/superagent": "^8.1.9",
